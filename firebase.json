{
  "hosting": {
    "site": "carta-ganbara",
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {"source": "**/*.woff2", "headers": [{"key": "Cache-Control", "value": "public, max-age=31536000, immutable"}]},
      {"source": "**/*.svg",   "headers": [{"key": "Cache-Control", "value": "public, max-age=31536000, immutable"}]},
      {"source": "**/*.png",   "headers": [{"key": "Cache-Control", "value": "public, max-age=2592000"}]},
      {"source": "**/*.jpg",   "headers": [{"key": "Cache-Control", "value": "public, max-age=2592000"}]},
      {"source": "**/*.webp",  "headers": [{"key": "Cache-Control", "value": "public, max-age=2592000"}]}
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
